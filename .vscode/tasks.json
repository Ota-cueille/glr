{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "architecture",
            "description": "Choose your targeted architecture",
            "type": "pickString",
            "options": [
                "x64",
                "arm64"
            ]
        }
    ],
    "tasks": [
        {
            "label": "windows-build-release",
            "group": "build",
            "command": "./scripts/build-windows.bat",
            "args": ["architecture=${input:architecture}","mode=release"]
        },
        {
            "label": "windows-build-debug",
            "group": "build",
            "command": "./scripts/build-windows.bat",
            "args": ["architecture=${input:architecture}","mode=debug"]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang.exe build active file",
            "command": "C:\\Program Files\\LLVM\\bin\\clang.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}