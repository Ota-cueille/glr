{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "architecture",
            "description": "Choose your targeted architecture",
            "type": "pickString",
            "options": [
                "x64",
                "arm64"
            ]
        }
    ],
    "tasks": [
        {
            "label": "windows-build-release",
            "group": "build",
            "command": "./scripts/build-windows.bat",
            "args": ["architecture=${input:architecture}","mode=release"]
        },
        {
            "label": "windows-build-debug",
            "group": "build",
            "command": "./scripts/build-windows.bat",
            "args": ["architecture=${input:architecture}","mode=debug"]
        }
    ]
}